{
  "name": "@promptshield/workspace",
  "author": "Mayank Kumar Chaudhari <https://mayankchaudhari.com>",
  "private": false,
  "version": "0.0.0",
  "description": "Helper functions for loading workspace files. Shared by CLI and LSP",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptshield-io/promptshield",
    "directory": "packages/workspace"
  },
  "bugs": "https://github.com/promptshield-io/promptshield/issues",
  "homepage": "https://github.com/promptshield-io/promptshield/blob/main/packages/workspace/README.md",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "forge": {
    "aliases": [
      "@ghostbuster/workspace"
    ],
    "icon": "Shield"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/promptshield-io"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "@promptshield/workspace",
    "turbo-forge"
  ],
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5"
  }
}
