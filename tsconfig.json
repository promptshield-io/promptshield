{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Base Standards */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": true,

    /* Module Resolution */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@tool/*": ["tooling/*/src"],
      "@turbo-forge/cli-kit": ["packages/cli-kit/src"],
      "forge-sync": ["packages/forge-sync/src"],
      "forge-upgrade": ["packages/forge-upgrade/src"],
      "remark-typedoc-mdx": ["packages/remark-typedoc-mdx/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "vitest.config.ts"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.turbo",
    "coverage"
  ]
}
