{
  "name": "@turbo-forge/cli-kit",
  "author": "Mayank Kumar Chaudhari <https://mayankchaudhari.com>",
  "private": false,
  "version": "0.0.0",
  "description": "Essential utilities for building powerful CLIs and tools in Turbo Forge monorepos.",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "forge": {
    "icon": "Terminal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react18-tools/turbo-forge",
    "directory": "packages/cli-kit"
  },
  "bugs": "https://github.com/react18-tools/turbo-forge/issues",
  "homepage": "https://github.com/react18-tools/turbo-forge/blob/main/packages/cli-kit/README.md",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup && gzip -c dist/index.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "defu": "^6.1.4",
    "jiti": "^2.6.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/react18-tools"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "peerDependencies": {
    "defu": "^6.0.0",
    "jiti": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "defu": {
      "optional": true
    },
    "jiti": {
      "optional": true
    }
  },
  "keywords": [
    "@turbo-forge/cli-kit",
    "TurboForge",
    "cli",
    "monorepo",
    "utility",
    "configuration",
    "workspace",
    "tooling",
    "typescript"
  ]
}
