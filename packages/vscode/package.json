{
  "name": "promptshield",
  "author": "Mayank Kumar Chaudhari <https://mayankchaudhari.com>",
  "private": true,
  "version": "0.0.0",
  "publisher": "mayank1513",
  "logo": "./promptshield.jpg",
  "description": "Real-time visual security for prompt engineering. Detects and visualizes hidden &quot;ghost&quot; characters, directional overrides, and malicious Unicode within the VS Code editor.",
  "license": "MIT",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "promptshield.scanWorkspace",
        "title": "PromptShield: Scan Workspace"
      },
      {
        "command": "promptshield.toggleXRay",
        "title": "PromptShield: Toggle X-Ray Mode"
      }
    ],
    "colors": [
      {
        "id": "promptshield.highThreatBackground",
        "description": "Background color for high-threat characters (e.g., invisible chars, homoglyphs).",
        "defaults": {
          "dark": "#ff000040",
          "light": "#ff000040",
          "highContrast": "#ff0000"
        }
      },
      {
        "id": "promptshield.criticalThreatBackground",
        "description": "Background color for CRITICAL threats (e.g. execution exploits).",
        "defaults": {
          "dark": "#ff000060",
          "light": "#ff000060",
          "highContrast": "#ff0000"
        }
      },
      {
        "id": "promptshield.mediumThreatBackground",
        "description": "Background color for MEDIUM threats (e.g. suspicious patterns).",
        "defaults": {
          "dark": "#ffa50040",
          "light": "#ffa50040",
          "highContrast": "#ffa500"
        }
      },
      {
        "id": "promptshield.lowThreatBackground",
        "description": "Background color for LOW threats (e.g. minor issues).",
        "defaults": {
          "dark": "#ffff0020",
          "light": "#ffff0020",
          "highContrast": "#ffff00"
        }
      },
      {
        "id": "promptshield.ghostTextForeground",
        "description": "Foreground color for ghost text overlays.",
        "defaults": {
          "dark": "#888888",
          "light": "#888888",
          "highContrast": "#ffffff"
        }
      },
      {
        "id": "promptshield.criticalThreatForeground",
        "description": "Foreground color for CRITICAL threat wavy underlines.",
        "defaults": {
          "dark": "#e11d48",
          "light": "#e11d48",
          "highContrast": "#ff0000"
        }
      },
      {
        "id": "promptshield.highThreatForeground",
        "description": "Foreground color for HIGH threat wavy underlines.",
        "defaults": {
          "dark": "#f97316",
          "light": "#f97316",
          "highContrast": "#ff0000"
        }
      },
      {
        "id": "promptshield.mediumThreatForeground",
        "description": "Foreground color for MEDIUM threat wavy underlines.",
        "defaults": {
          "dark": "#eab308",
          "light": "#eab308",
          "highContrast": "#ffff00"
        }
      },
      {
        "id": "promptshield.lowThreatForeground",
        "description": "Foreground color for LOW threat wavy underlines.",
        "defaults": {
          "dark": "#3b82f6",
          "light": "#3b82f6",
          "highContrast": "#0000ff"
        }
      }
    ],
    "configuration": {
      "title": "PromptShield",
      "properties": {
        "promptshield.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable PromptShield scanning."
        },
        "promptshield.noIgnore": {
          "type": "boolean",
          "default": false,
          "description": "Disable inline ignore rules in comments (e.g., // promptshield-ignore)."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptshield-io/promptshield",
    "directory": "packages/vscode"
  },
  "bugs": "https://github.com/promptshield-io/promptshield/issues",
  "homepage": "https://github.com/promptshield-io/promptshield/blob/main/packages/vscode/README.md",
  "sideEffects": false,
  "scripts": {
    "build": "tsup && gzip -c dist/extension.js | wc -c",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "pnpm build && tsx test/runTest.ts"
  },
  "devDependencies": {
    "@promptshield/core": "workspace:*",
    "@promptshield/lsp": "workspace:*",
    "@promptshield/workspace": "workspace:*",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "latest",
    "@types/vscode": "^1.109.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^13.0.6",
    "mocha": "^11.7.5",
    "tsup": "latest",
    "typescript": "latest",
    "vscode-languageclient": "^9.0.1"
  },
  "forge": {
    "aliases": [],
    "icon": "Shield"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/promptshield-io"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/mayank1513"
    }
  ],
  "keywords": [
    "security",
    "unicode",
    "invisible characters",
    "homoglyph",
    "prompt injection",
    "ai security",
    "llm security",
    "text normalization",
    "developer tools",
    "secure coding",
    "PromptShield",
    "turbo-forge"
  ]
}
