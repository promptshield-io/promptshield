{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm build",
      "options": {
        "cwd": "${workspaceFolder}/packages/vscode"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "label": "npm: build",
      "detail": "pnpm build (packages/vscode)"
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev", "--filter", "promptshield"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
